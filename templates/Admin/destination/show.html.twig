{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} Destination
{% endblock %}

{% block body %}
    <h1>Destination</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ville</th>
                <td>{{ destination.Ville }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ destination.Latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ destination.Longitude }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ destination.Created ? destination.Created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_destination_index') }}">Revenir à la liste des destinations</a>

    <a class="btn btn-info" href="{{ path('admin_destination_edit', {'id': destination.id}) }}">Modifier</a>

    {{ include('admin/destination/_delete_form.html.twig') }}
{% endblock %}
