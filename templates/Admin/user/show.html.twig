{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    Utilisateur
{% endblock %}

{% block body %}
    <div class="container pt-3">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Login</th>
                    <td>{{ user.login }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ include('admin/user/roles_pills.html.twig', { roles: user.roles }) }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ user.Created ? user.Created|date('d-m-Y') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-info" href="{{ path('admin_user_index') }}">Revenir à la liste des utilisateurs</a>

        <a class="btn btn-info" href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
