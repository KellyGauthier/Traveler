{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h1>Voyage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Kilometres</th>
                <th>Id</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.Titre }}</td>
                <td>{{ voyage.Description }}</td>
                <td>{{ voyage.Date ? voyage.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ voyage.Kilometres }}</td>
                <td>{{ voyage.id }}</td>
                <td>{{ voyage.Created ? voyage.Created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_voyage_show', {'id': voyage.id}) }}">show</a>
                    <a href="{{ path('admin_voyage_edit', {'id': voyage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_voyage_new') }}">Create new</a>
{% endblock %}
