{% block title %}Voyage{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ voyage.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.Description }}</td>
            </tr>
