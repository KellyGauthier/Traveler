{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} Voyage
{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ voyage.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.Description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ voyage.Date ? voyage.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ voyage.Created ? voyage.Created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>
                    {% for photo in voyage.portfolios %}
                    <img src="{{ asset('uploads/photos/' ~ photo.filePath) | imagine_filter('my_thumb')}}">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_voyage_index') }}">Revenir à la liste des voyages</a>

    <a class="btn btn-info" href="{{ path('admin_voyage_edit', {'id': voyage.id}) }}">Modifier</a>

    {{ include('admin/voyage/_delete_form.html.twig') }}
{% endblock %}
