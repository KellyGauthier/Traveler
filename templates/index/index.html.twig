{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} Accueil
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="jumbotron">
        <h1 class="display-4">Traveler</h1>
        <p class="lead">Bienvenue sur Traveler!</p>
        <hr class="my-4">
        <p>Suivez-moi dans mon voyage autour du monde!</p>

        {% if app.user %}
        Bonjour {{ app.user.login }}
        {% else %}
        <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}" role="button" id="connect">Connectez-vous</a>
        {% endif %}
    </div>
{% endblock %}
